%html.no-js{lang: "ru-RU"}
  %head
    %title Connections / Profile settings / Fragrance
    = Haml::Engine.new(File.read('views/layouts/_head.haml')).render
  
  %body#page.page
    = Haml::Engine.new(File.read('views/common/_alerts.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_header.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_nav.haml')).render
    
    %main#main.main{role: "main"}
      = Haml::Engine.new(File.read('views/common/_profile_dashboard.haml')).render

      .ctn
        .p-t_3.p-b_6

          %h2.tx.__upper.m-b_2 Account Settings

          .grid.__no-gutter
            .grid-i.__grid-2-7>

              %aside.sidebar.__nav{data: {resize: "height"}}
                = Haml::Engine.new(File.read('views/layouts/_nav_settings.haml')).render

            .grid-i.__grid-5-7>
              %section.section.__settings{role: "region", "aria-label" => "Profile settings", data: {resize: "height"}}

                %form.form
                  %h3.tx.__upper.__600.m-b_3 Connections
                  %div.m-b_3
                    .grid
                      .grid-i.__grid-1-4.va-m>
                        %p 
                          %i.fa.fa-facebook-square.social-connections-ico
                          Facebook
                      .grid-i.__grid-1-4.va-m>
                        %p.tx.__600.__major Connected!
                      .grid-i.__grid-2-4.va-m>
                        %button.form-el.__btn.__black Remove connection
                  %div.m-b_3
                    .grid
                      .grid-i.__grid-1-4.va-m>
                        %p
                          %i.fa.fa-twitter-square.social-connections-ico
                          Twitter
                      .grid-i.__grid-1-4.va-m>
                        %p.tx.__600 Not connected yet
                      .grid-i.__grid-2-4.va-m>
                        %button.form-el.__btn.__purple Connection
                  %div.m-b_3
                    .grid
                      .grid-i.__grid-1-4.va-m>
                        %p
                          %i.fa.fa-tumblr-square.social-connections-ico
                          Tumblr
                      .grid-i.__grid-1-4.va-m>
                        %p.tx.__600 Not connected yet
                      .grid-i.__grid-2-4.va-m>
                        %button.form-el.__btn.__purple Connection

    = Haml::Engine.new(File.read('views/layouts/_footer.haml')).render