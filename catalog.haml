= haml :"views/common/_breadcrumbs"
.ctn
  .p-t_2.p-b_6
    .grid
      
      .grid-i.__grid-18-24>
        %section.content{role: "region", "aria-label" => "Catalog"}
          .tabs.__content
            %ul.grid.__no-gutter
              %li.grid-i.__grid-4-18>
                %a{href: "#votes"} Votes
              %li.grid-i.__grid-4-18>
                %a{href: "#review"} Review
              %li.grid-i.__grid-4-18>
                %a{href: "#deals"} Deals
            
            #votes.tabs_page
            
            #review.tabs_page
              %section.section
                .reviews-add
                  .grid
                    .grid-i.__grid-4-23.__prefix-1-23>
                      = haml :"/views/common/_avatar"
                    .grid-i.__grid-17-23>
                      %form.form
                        .m-b_1
                          %textarea.form-el.__textarea.__block{rows: 4, placeholder: "Leave your review"}
                        .grid
                          .grid-i.__grid-1-2>
                            .stars
                          .grid-i.__grid-1-2>
                            .tx.__right
                              %input.form-el.__btn.__purple.grid-i.__grid-3-5{type: "submit", value: "Send"}
              %section.section
                - 1.upto(7) do
                  = haml :"/views/common/_review_item"
            
            #deals.tabs_page
              %section.section.__border
                .m-b_3
                  .grid
                    .grid-i.__grid-2-3.va-m>
                      %h4.tx.__upper More from <b>Marc Jacobs</b>
                    .grid-i.__grid-1-3.va-m>
                      %nav.carousel-nav.tx.__right
                        %a.carousel-nav_i.__prev{href: "#"}
                          %i.fa.fa-chevron-left
                        %a.carousel-nav_i.__next{href: "#"}
                          %i.fa.fa-chevron-right
                .carousel{data: {items: 5}}
                  - 1.upto(20) do
                    = haml :"/views/common/_deals_catalog_item"
              %section.section.__border
                .m-b_3
                  .grid
                    .grid-i.__grid-2-3.va-m>
                      %h4.tx.__upper Customers <b>Who Viewed This Item Also Viewed</b>
                    .grid-i.__grid-1-3.va-m>
                      %nav.carousel-nav.tx.__right
                        %a.carousel-nav_i.__prev{href: "#"}
                          %i.fa.fa-chevron-left
                        %a.carousel-nav_i.__next{href: "#"}
                          %i.fa.fa-chevron-right
                .carousel{data: {items: 5}}
                  - 1.upto(20) do
                    = haml :"/views/common/_deals_catalog_item"
              %section.section.__border
                .m-b_3
                  .grid
                    .grid-i.__grid-2-3.va-m>
                      %h4.tx.__upper Video reviews
                    .grid-i.__grid-1-3.va-m>
                      %nav.carousel-nav.tx.__right
                        %a.carousel-nav_i.__prev{href: "#"}
                          %i.fa.fa-chevron-left
                        %a.carousel-nav_i.__next{href: "#"}
                          %i.fa.fa-chevron-right
                .carousel{data: {items: 3}}
                  - 1.upto(20) do
                    = haml :"/views/common/_deals_video_item"

      .grid-i.__grid-6-24>
        %aside#sidebar.sidebar{role: "sidebar"}
          .p-t_2.p-b_2
            %h2.tx.__center.__upper Perfume reviews
          %hr.hr
          .p-t_2.p-b_2
            .reviews-thumbs
              - 1.upto(20) do |i|
                = haml :"/views/common/_reviews_thumbs"