!!!
%html.no-js{lang: "ru-RU"}
  %head
    %title Rating / Fragrance
    = Haml::Engine.new(File.read('views/layouts/_head.haml')).render
  
  %body#page.page
    = Haml::Engine.new(File.read('views/common/_alerts.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_header.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_nav.haml')).render
    
    %main#main.main{role: "main"}
      = Haml::Engine.new(File.read('views/common/_breadcrumbs.haml')).render

      .ctn
        .p-t_3.p-b_6

          %section.section{role: "region", "aria-label" => "Message"}
            
            %h2.tx.__upper.m-b_2 
              Народный 
              %span.tx.__400 Рейтинг

            .block
              .grid.__no-gutter

                .grid-i.__grid-2-7>
                  %aside.settings-sidebar
                    %nav
                      %ul.settings-nav
                        %li.settings-nav_i
                          %a.settings-nav_i_a.__current{href: "#"} Ароматы
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} Brands
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} Ноты
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} Люди
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} Запахи
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} TOP 100
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} Самые популярные
                        %li.settings-nav_i
                          %a.settings-nav_i_a{href: "#"} Антирейтинг

                .grid-i.__grid-5-7>
                  .block.__normal
                    .grid
                      - 1.upto(28) do
                        .grid-i.__grid-1-5>
                          %figure.brands-i>
                            .brands-i_photo.m-b_1
                              %a{href: "/brand_show.html"}
                                %img{src: "/assets/images/fake/brand-#{rand(1..10)}.jpg", width: 74, height: 74, alt: ""}
                            %figcaption
                              %p Brand name

    = Haml::Engine.new(File.read('views/layouts/_footer.haml')).render