!!!
%html.no-js{lang: "ru-RU"}
  %head
    %title Rating / Fragrance
    = Haml::Engine.new(File.read('views/layouts/_head.haml')).render
  
  %body#page.page
    = Haml::Engine.new(File.read('views/common/_alerts.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_header.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_nav.haml')).render
    
    %main#main.main{role: "main"}
      = Haml::Engine.new(File.read('views/common/_breadcrumbs.haml')).render

      .ctn
        .p-t_3.p-b_6

          %section.section.m-b_1{role: "region", "aria-label" => "Content sorting"}
            .grid
              .grid-i.__grid-2-3.va-m>
                %h2.tx.__upper 
                  Народный 
                  %span.tx.__400 Рейтинг
              .grid-i.__grid-1-3.va-m>
                %form.form
                  .grid
                    .grid-i.__grid-1-2.va-m>
                      %label.form-el.__label.__block.tx.__right Sorting by:&nbsp;
                    .grid-i.__grid-1-2.va-m>
                      .form-el.__select.__block.__fake
                        %p &nbsp;
                        %select.form-el.__select.__real
                          %option{selected: "selected"} дата
                          %option имя
                          %option рейтинг

          .grid.__no-gutter
            .grid-i.__grid-2-7>
              
              %aside.sidebar.__nav{data: {resize: "height"}}
                %nav
                  %ul.sidebar-nav
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a.__current{href: "#"} 
                        Ароматы
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        Brands
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        Ноты
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        Люди
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        Запахи
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        TOP 100
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        Самые популярные
                        %span 3 New Messages
                    %li.sidebar-nav_i
                      %a.sidebar-nav_i_a{href: "#"} 
                        Антирейтинг
                        %span 3 New Messages

            .grid-i.__grid-5-7>

              %section.section.__rating{role: "region", "aria-label" => "Rating", data: {resize: "height"}}
                .grid
                  - 1.upto(30) do |i|
                    .grid-i.__grid-1-5>
                      %figure.brands-i>
                        .brands-i_photo.m-b_1
                          %a.double-hover{href: "/brands_show.html##{i}"}
                            %img{src: "/assets/images/fake/brand-#{rand(1..10)}.jpg", width: 74, height: 74, alt: ""}
                        %figcaption
                          %p.m-b_1
                            %a.a.__invert.double-hover{href: "/brands_show.html##{i}"} Brand name
                          .stars.__readonly.va-m{data: {score: "#{rand(1..5)}"}}

    = Haml::Engine.new(File.read('views/layouts/_footer.haml')).render